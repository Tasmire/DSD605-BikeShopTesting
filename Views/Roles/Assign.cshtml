@model DSD603_BikeShopDB.Models.RolesAssignViewModel
@{
    ViewData["Title"] = "Assign Role";
}

<h2>Assign Role to User</h2>

<form asp-action="Assign" method="post" class="mt-4">

    <div class="form-group mb-3 role-input">
        <label asp-for="SelectedUserName"></label>
        <select asp-for="SelectedUserName"
                asp-items="Model.Users"
                class="form-select">
            <option value="">-- Select a user --</option>
        </select>
        <span asp-validation-for="SelectedUserName" class="text-danger"></span>
    </div>

    <div class="form-group mb-4 role-input">
        <label asp-for="SelectedRoleName"></label>
        <select asp-for="SelectedRoleName"
                asp-items="Model.Roles"
                class="form-select">
            <option value="">-- Select a role --</option>
        </select>
        <span asp-validation-for="SelectedRoleName" class="text-danger"></span>
    </div>

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <button type="submit" class="btn btn-primary me-2">Assign</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}