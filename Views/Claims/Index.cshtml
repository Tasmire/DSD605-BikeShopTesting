@model DSD603_BikeShopDB.Models.ClaimsIndexViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="container mt-4">
    <h1>Claims Management</h1>
    <!-- Action Buttons -->
    <div class="mb-4">
        <a asp-controller="Claims" asp-action="Create" class="btn btn-success">Add Claim</a>
        <a asp-controller="Claims" asp-action="Assign" class="btn btn-primary">Assign Claim to User</a>
    </div>
    <!-- Users and Their Claims Table -->
    <section class="mt-5">
        <h2>Users and Their Claims</h2>
        @if (Model.UserClaims.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>User Name</th>
                            <th>Claims</th>
                            <th>Claim Count</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var userClaim in Model.UserClaims)
                        {
                            <tr>
                                <td>
                                    <i class="bi bi-person"></i> @userClaim.UserName
                                </td>
                                <td>
                                    @if (userClaim.HasClaims)
                                    {
                                        @foreach (var claim in userClaim.Claims)
                                        {
                                            <div class="claim-item mb-1">
                                                <span class="badge bg-info me-1">
                                                    @claim.Type
                                                </span>
                                                <small class="text-muted">@claim.Value</small>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">
                                            <i class="bi bi-dash"></i> No claims assigned
                                        </span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@userClaim.ClaimCount</span>
                                </td>
                                @* <td>
                                    <a asp-action="Edit" asp-controller="Claims" asp-route-username="@userClaim.UserName" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                </td> *@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No users found in the system.
            </div>
        }
    </section>
    <!-- Summary Section -->
    <section class="mt-5">
        <h2>Summary</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-people"></i> Total Users
                        </h5>
                        <p class="card-text display-6">@Model.Users.Count</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-key"></i> Total Claims
                        </h5>
                        <p class="card-text display-6">@Model.UserClaims.Sum(uc => uc.ClaimCount)</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<style>
    .claim-item {
        border-left: 3px solid #0d6efd;
        padding-left: 8px;
        margin-bottom: 4px;
    }
</style>