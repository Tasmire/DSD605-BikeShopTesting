@{
	ViewData["Title"] = "Home Page";
}
		<header class="bg-dark py-5 index-header">
			<div class="container px-5">
				<div class="row gx-5 align-items-center justify-content-center">
					<div class="col-lg-8 col-xl-7 col-xxl-6">
						<div class="my-5 text-center text-xl-start">
							<h1 class="display-5 fw-bolder text-white mb-2">Welcome!</h1>
							<p class="lead fw-normal text-white-50 mb-4">Welcome to the Bike Shop Database, where you can edit data with ease. Use the navigation bar or the links below to get started.</p>
						</div>
					</div>
					<div class="col-xl-5 col-xxl-6 d-none d-xl-block text-center"><img class="img-fluid rounded-3 my-5" src="img/bike-closeup.jpg" alt="..." /></div>
				</div>
			</div>
		</header>
		<!-- Features section-->
		<section class="py-5" id="features">
			<div class="container px-5 my-5">
				<div class="row gx-5">
					<div class="col-lg-4 mb-5 mb-lg-0"><h2 class="fw-bolder mb-0">Where to start?</h2></div>
					<div class="col-lg-8">
						<div class="row gx-5 row-cols-1 row-cols-md-2">
							<div class="col mb-5 h-100">
								<a class="text-dark" asp-area="" asp-controller="Customers" asp-action="Index">
									<div class="feature bg-dark bg-gradient text-white rounded-3 mb-3"><i class="bi bi-person-fill"></i></div>
									<h2 class="h5">Customers</h2>
								</a>
								<p class="mb-0">Create, edit and delete customer information.</p>
							</div>
							<div class="col mb-5 h-100">
								<a class="text-dark" asp-area="" asp-controller="Stocks" asp-action="Index">
									<div class="feature bg-dark bg-gradient text-white rounded-3 mb-3"><i class="bi bi-archive-fill"></i></div>
									<h2 class="h5">Stock</h2>
								</a>	
								<p class="mb-0">View the stock list and edit product information.</p>
							</div>
							<div class="col mb-5 mb-md-0 h-100">
								<a class="text-dark" asp-area="" asp-controller="Orders" asp-action="Index">
									<div class="feature bg-dark bg-gradient text-white rounded-3 mb-3"><i class="bi bi-cart-fill"></i></div>
									<h2 class="h5">Orders</h2>
								</a>
								<p class="mb-0">View all orders and edit information.</p>
							</div>
							<div class="col h-100">
								<a class="text-dark" asp-area="" asp-controller="Staffs" asp-action="Index">
									<div class="feature bg-dark bg-gradient text-white rounded-3 mb-3"><i class="bi bi-person-badge-fill"></i></div>
									<h2 class="h5">Staff</h2>
								</a>
								<p class="mb-0">Create, edit and delete staff information.</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	
	<!-- Bootstrap core JS-->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
	<!-- Core theme JS-->
	<script src="js/scripts.js"></script>
